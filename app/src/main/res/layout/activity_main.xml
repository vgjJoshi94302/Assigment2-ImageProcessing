<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viraljoshi.assigment2_imageprocessing.MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="92dp"
        android:layout_height="47dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907" />

    <Button
        android:id="@+id/button"
        android:layout_width="114dp"
        android:layout_height="51dp"
        android:text="Capture Here"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.915"
        app:layout_constraintHorizontal_bias="0.059" />

    <Button
        android:id="@+id/OpenImage"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:onClick="imageGalleryclicked"
        android:text="OpenImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintVertical_bias="0.909" />

    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="380dp"
        android:layout_height="420dp"
        android:gravity="bottom"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:weightSum="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013"
        tools:layout_editor_absoluteY="2dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="40dp"
            android:layout_width="350dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.554"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.284"
            android:layout_weight="0.64" />
        <EditText
            android:id="@+id/writename"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="22dp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginStart="106dp">

            <requestFocus />
        </EditText>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>